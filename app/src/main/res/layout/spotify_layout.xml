<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/songListView"
        android:layout_width="159dp"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:scrollbars="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <Button
        android:id="@+id/b_startSong"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/ic_launcher_background"
        android:onClick="onSongStartClicked"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/songListView" />

    <Button
        android:id="@+id/b_loadTracks"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="onLoadTracks"
        android:text="Load Tracks"
        app:layout_constraintBottom_toTopOf="@+id/songListView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>